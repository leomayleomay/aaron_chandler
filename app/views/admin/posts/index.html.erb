<table class="table">
  <thead>
    <tr>
      <th>
        Title
      </th>

      <th colspan="2">
        Actions
      </th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <%= link_to post.title.truncate(50), post %>
        </td>

        <td>
          <%= link_to "Edit", edit_admin_post_path(post) %>
        </td>

        <td>
          <%= link_to "Destroy", admin_post_path(post), :method => :delete, :confirm => "Are you sure?" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
