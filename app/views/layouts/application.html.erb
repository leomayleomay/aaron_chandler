<!DOCTYPE html>
<html>
  <head>
    <title>AaronChandler</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body> 
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>

          <%= link_to "AaronChandler", root_url, :class => "brand" %>

          <div class="nav-collapse">
            <ul class="nav pull-right">
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <% if user_signed_in? %>
                    <%= current_user.email %>
                  <% else %>
                    Member Account
                  <% end %>
                </a>
                <ul class="dropdown-menu">
                  <% if user_signed_in? %>
                    <li><%= link_to('Sign out', destroy_user_session_path, :method => 'delete') %></li>
                  <% else %>
                    <li><%= link_to "Sign in", new_user_session_path %></li>
                    <li><%= link_to "Sign up", new_user_registration_path %></li>
                  <% end %>
                </ul>
              </li>

              <li class="divider-vertical"></li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <% if administrator_signed_in? %>
                    <%= current_administrator.email %>
                  <% else %>
                    Admin Account
                  <% end %>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "New Post", new_admin_post_path %></li>
                  <li><%= link_to "Manage Posts", admin_posts_path %></li>

                  <% if administrator_signed_in? %>
                    <li><%= link_to('Sign out', destroy_administrator_session_path, :method => 'delete') %></li>
                  <% else %>
                    <li><%= link_to "Sign in", new_administrator_session_path %></li>
                  <% end %>
                </ul>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <div class="container">
      <div class="content">
        <% flash.each do |name, msg| %>
          <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
            <a class="close" data-dismiss="alert">Ã—</a>
            <%= msg %>
          </div>
        <% end %>

        <%= yield %>
      </div>

      <footer class="footer">
        <p class="pull-right">
          <a href="#">Back to top</a>
        </p>
      </footer>
    </div>

    <%= yield :javascripts %>
  </body>
</html>
